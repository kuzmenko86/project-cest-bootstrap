<?xml version="1.0" encoding="UTF-8"?>
<elements>
    <source>
        <title>Login page</title>
    </source>

    <codeception>
        <amonpage><![CDATA[/customer/account/login/]]></amonpage>
        <wantto>check login page</wantto>
        <see>
            <row>Login or Create an Account,h1</row>
            <row>New Customers,h2</row>
        </see>
        <seeintitle>Customer Login</seeintitle>

        <seeelement>
            <row>//div[@class='col2-set']</row>
            <row>//div[@class='col-1 registered-users']</row>
            <row>//div[@class='col-2 new-users']</row>
        </seeelement>
    </codeception>

    <pageElements>
        <email>//input[@id='email']</email>
        <password>//input[@id='pass']</password>
        <login_button>//button[@id='send2']</login_button>
        <invalid_login>Invalid login or password</invalid_login>
        <require_field_message>This is a required field.</require_field_message>
        <error_invalid_data>Invalid login or password.</error_invalid_data>
    </pageElements>

    <debug>false</debug>
</elements>